/*******************************
        Theme Selection
*******************************/

/* To override a theme for an individual element
   specify theme name below
*/

/* Global */
@site       : 'metrik';
@reset      : 'metrik';

/* Elements */
@button     : 'metrik';
@container  : 'metrik';
@divider    : 'metrik';
@flag       : 'metrik';
@header     : 'metrik';
@icon       : 'metrik';
@image      : 'metrik';
@input      : 'metrik';
@label      : 'metrik';
@list       : 'metrik';
@loader     : 'metrik';
@placeholder: 'metrik';
@rail       : 'metrik';
@reveal     : 'metrik';
@segment    : 'metrik';
@step       : 'metrik';
@text       : 'metrik';

/* Collections */
@breadcrumb : 'metrik';
@form       : 'metrik';
@grid       : 'metrik';
@menu       : 'metrik';
@message    : 'metrik';
@table      : 'metrik';

/* Modules */
@accordion  : 'metrik';
@calendar   : 'metrik';
@checkbox   : 'metrik';
@dimmer     : 'metrik';
@dropdown   : 'metrik';
@embed      : 'metrik';
@modal      : 'metrik';
@nag        : 'metrik';
@popup      : 'metrik';
@progress   : 'metrik';
@slider     : 'metrik';
@rating     : 'metrik';
@search     : 'metrik';
@shape      : 'metrik';
@sidebar    : 'metrik';
@sticky     : 'metrik';
@tab        : 'metrik';
@toast      : 'metrik';
@transition : 'metrik';

/* Views */
@ad         : 'metrik';
@card       : 'metrik';
@comment    : 'metrik';
@feed       : 'metrik';
@item       : 'metrik';
@statistic  : 'metrik';

/*******************************
            Folders
*******************************/

/* Path to theme packages */
@themesFolder : 'themes';

/* Path to site override folder */
@siteFolder  : 'site';


/*******************************
         Import Theme
*******************************/

@import (multiple) "theme.less";

/* End Config */
